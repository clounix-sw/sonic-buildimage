#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

include /usr/share/dpkg/pkg-info.mk

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export INSTALL_MOD_DIR:=extra

PYTHON         ?= python3

PACKAGE_PRE_NAME := sonic-platform-clounix
KVERSION   ?= $(shell uname -r)
KERNEL_SRC := /lib/modules/$(KVERSION)
export KERNEL_SRC
MOD_SRC_DIR:= $(shell pwd)
MODULE_DIRS:=  clx12800-48d8e clx25600-48d8e
MODULE_DIR := modules
UTILS_DIR := utils
SERVICE_DIR := service
SCRIPTS_DIR := scripts
BIOS_DIR := bios_bin
CONF_DIR := conf
PROCESS_DIR := clxProcess
MODPROBE_DIR := modprobe.d
IXGBE_VERSION := 5.9.4
DEV_LIST_CLX25600_48D8E := 0 1
DEV_LIST_CLX12800_48D8E := 0 1 2

%:
	dh $@ --with systemd,python2,python3 --buildsystem=pybuild

clean:
	dh_testdir
	dh_testroot
	dh_clean

build:
	# For common driver, maurice	
	make clean -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/common/modules; \
	make modules -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/common/modules;\
	cd $(MOD_SRC_DIR)/common; \
	python2 setup.py build; \
	python2 setup.py bdist_wheel -d $(MOD_SRC_DIR)/common/utils; \
	python3 setup.py build; \
	python3 setup.py bdist_wheel -d $(MOD_SRC_DIR)/common/utils; \
	cd $(MOD_SRC_DIR)/common/fpga_utils; \
	make fpga;\
	cd $(MOD_SRC_DIR); \
	(for mod in $(MODULE_DIRS); do \
		make clean -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/$${mod}/modules; \
		make modules -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/$${mod}/modules; \
	done)

binary: binary-arch binary-indep
	# Nothing to do

binary-arch: 
	# Nothing to do

#install: build
	#dh_testdir
	#dh_testroot
	#dh_clean -k 
	#dh_installdirs

binary-indep:
	dh_testdir
	dh_installdirs

	# Custom package commands
	(for mod in $(MODULE_DIRS); do \
	    dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /$(KERNEL_SRC)/$(INSTALL_MOD_DIR); \
	    dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/local/bin; \
	    dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/local/bin/${PROCESS_DIR}; \
	    dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/bin; \
	    dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /lib/systemd/system; \
	    dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /etc/${MODPROBE_DIR}; \
	    cp $(MOD_SRC_DIR)/$${mod}/modules/*.ko debian/$(PACKAGE_PRE_NAME)-$${mod}/$(KERNEL_SRC)/$(INSTALL_MOD_DIR);\
	    cp $(MOD_SRC_DIR)/common/modules/*.ko debian/$(PACKAGE_PRE_NAME)-$${mod}/$(KERNEL_SRC)/$(INSTALL_MOD_DIR);\
	    cp $(MOD_SRC_DIR)/common/$(UTILS_DIR)/* debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/; \
	    cp $(MOD_SRC_DIR)/common/$(SERVICE_DIR)/*.service debian/$(PACKAGE_PRE_NAME)-$${mod}/lib/systemd/system/; \
	    cp $(MOD_SRC_DIR)/common/$(SCRIPTS_DIR)/* debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/bin/; \
	    cp $(MOD_SRC_DIR)/common/${PROCESS_DIR}/* debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/${PROCESS_DIR}; \
	    cp $(MOD_SRC_DIR)/common/modprobe/* debian/$(PACKAGE_PRE_NAME)-$${mod}/etc/${MODPROBE_DIR}; \
		if [ $${mod} = "clx12800-48d8e" ]; then \
		        (for dev in $(DEV_LIST_CLX12800_48D8E); do \
				dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/share/sonic/device/x86_64-clounix_clx12800_48d8e-r$${dev}/pddf; \
				cp $(MOD_SRC_DIR)/common/$(UTILS_DIR)/*.whl debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/share/sonic/device/x86_64-clounix_clx12800_48d8e-r$${dev}/pddf/; \
				cp $(MOD_SRC_DIR)/common/fpga_utils/fpga debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/share/sonic/device/x86_64-clounix_clx12800_48d8e-r$${dev}/clx_fpga; \
	                done) \
		fi; \
		if [ $${mod} = "clx25600-48d8e" ]; then \
		        (for dev in $(DEV_LIST_CLX25600_48D8E); do \
				dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/share/sonic/device/x86_64-clounix_clx25600_48d8e-r$${dev}/pddf; \
				cp $(MOD_SRC_DIR)/common/$(UTILS_DIR)/*.whl debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/share/sonic/device/x86_64-clounix_clx25600_48d8e-r$${dev}/pddf/; \
				cp $(MOD_SRC_DIR)/common/fpga_utils/fpga debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/share/sonic/device/x86_64-clounix_clx25600_48d8e-r$${dev}/clx_fpga; \
	                done) \
		fi; \
		cp $(MOD_SRC_DIR)/common/$(SERVICE_DIR)/platform_api_mgnt.sh debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/; \
	done) 
	# pit

	# Resuming debhelper scripts
	dh_testroot
	dh_install
	dh_installchangelogs
	dh_installdocs
	dh_systemd_enable
	dh_installinit
	dh_systemd_start
	dh_link
	dh_fixperms
	dh_compress
	dh_strip
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
.PHONY: build binary binary-arch binary-indep clean
